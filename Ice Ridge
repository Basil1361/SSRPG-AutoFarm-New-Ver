func IcyRidgeBlueLvl1()
   ? loc = Icy Ridge
     ? hp < 5
       activate potion
     ? summon.count = 0 & foe.count = 0
     ^& item.GetCooldown(＂cinderwisp＂) <= 0
     ^& item.CanActivate()
       equipL fire_talisman
       activate L

     :? foe.count = 0 
     ^& pickup.distance <= 10
       equipL Star
       equipR Tri
       
     :? foe = Ki Eater | foe = Ki Gobbler
     ^| foe = Ki Slurper | foe = Ice Elemental
     ^| foe = Ice Pillar 
     ^| foe = Elder Ice Elemental 

       ? foe.count = 0 
         equip Dashing Shield
         equipL Triske 

       :? foe.count > 0 & foe.distance > 10
         equip Dashing Shield
         equipL Triske
       :
         equipL Vigor Sword
         equipR Fire Sword

     :? foe = boss | foe = Ice Wall
       ?foe.distance >= 7
         equip dashing shield
       :?item.GetCooldown(＂bardiche＂) <= 0 
        ^|(item.right = ＂bardiche＂
        ^& item.right.state = 2)
          equip bardiche
          activate R
       :
         equipL vigor sword *9 + 13
         equipR fire sword *9 + 13
     : 
       equip Dashing Shield
       equipL Triske
